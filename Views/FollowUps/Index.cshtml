@model IEnumerable<Waads.Models.FollowUp>

@{
    ViewData["Title"] = "Follow-Ups";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Follow-Up Items</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Create New Follow-Up
        </a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Organization</th>
                <th>Due Date</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.OrganizationName</td>
                    <td>@item.DueDate.ToString("MMM dd, yyyy")</td>
                    <td>
                        <span class="badge @(item.Status == Waads.Models.FollowUpStatus.Overdue ? "bg-danger" :
                                                                          item.Status == Waads.Models.FollowUpStatus.Completed ? "bg-success" : "bg-info")">
                        @item.Status
                    </span>
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
                        }
        </tbody>
    </table>
</div>