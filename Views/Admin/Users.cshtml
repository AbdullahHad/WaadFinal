@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-users text-primary"></i> Employee Directory</h2>
    </div>

    <div class="card shadow border-0">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>User ID / Identifier</th>
                        <th>Email Address</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><code class="text-muted">@user.Id.Substring(0, 8)...</code></td>
                            <td><strong>@user.Email</strong></td>
                            <td class="text-end">
                                <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fa-solid fa-eye"></i> View Waads
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>